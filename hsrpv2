cấu hình trên router 0

int g0/0/0
ip add 172.21.0.1 255.255.255.0
standby version 2
standby 10 ip 172.21.0.10
standby 10 priority 110
standby 10 preempt
int g0/0/1
ip add 172.22.0.1 255.255.255.0
standby version 2
standby 20 ip 172.22.0.10
standby 20 priority 110
standby 20 preempt
exit
//ip route 172.0.0.0 255.0.0.0 GigabitEthernet0/0/0 
//ip route 172.0.0.0 255.0.0.0 GigabitEthernet0/0/1 
ip route 172.0.0.0 255.0.0.0 172.21.0.3
ip route 172.0.0.0 255.0.0.0 172.22.0.3
exit
end 
wr


cấu hình trên router 1

int g0/0/0
ip add 172.21.0.2 255.255.255.0
standby version 2
standby 10 ip 172.21.0.10
standby 10 preempt
int g0/0/1
ip add 172.22.0.2 255.255.255.0
standby version 2
standby 20 ip 172.22.0.10
standby 20 preempt
exit

//ip route 172.0.0.0 255.0.0.0 GigabitEthernet0/0/0 
//ip route 172.0.0.0 255.0.0.0 GigabitEthernet0/0/1 
ip route 172.0.0.0 255.0.0.0 172.21.0.3
ip route 172.0.0.0 255.0.0.0 172.22.0.3


exit
end 
wr


cấu hình trên core 1

interface Vlan11
ip address 172.21.0.3 255.255.255.0
 
interface GigabitEthernet1/0/7
switchport access vlan 11
interface GigabitEthernet1/0/8
switchport access vlan 11
exit

ip route 0.0.0.0 0.0.0.0 172.21.0.10



cau hinh tren core 2

